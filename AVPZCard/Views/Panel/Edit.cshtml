@model PostViewModel
@{

}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>
                Название детали -
            </label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>
                Описание для поисковиков -
            </label>
            <input asp-for="Description" />
        </div>
        <div>
            <label>
                Теги -
            </label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label>
                Категория -
            </label>
            @if (Model.Category == null)
            {
                <select asp-for="CategoryId">
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat.Id_Category">@cat.CategoryName</option>
                    }

                </select>
            }
            else
            {
                <label>@Model.Category.CategoryName</label>
                <input asp-for="CategoryId" type="hidden" value="@Model.CategoryId" />
            }
        </div>
        <div>
            <label>
                Производитель -
            </label>
            <input asp-for="Manufacturer" />
        </div>
        <div>
            <label>
                В наличии -
            </label>
            @Html.CheckBox("IsAble", true)
        </div>
        <div>
            <label>
                Номер детали -
            </label>
            <input asp-for="DetailNumber" />
        </div>
        <div>
            <label>
                Цена -
            </label>
            <input asp-for="Price" />
        </div>
        <div>
            <label>
                Основное описание -
            </label>
            <textarea id="editor" asp-for="Body"> </textarea>
        </div>
        <div>
            <label>
                Фото детали -
            </label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image" />
        </div>
        <input type="submit" value="submit" />
    </form>
</div>

@section Scripts{
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}
