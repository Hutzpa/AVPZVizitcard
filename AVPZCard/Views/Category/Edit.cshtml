@model CategoryViewModel
@{

}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<div>
    <form asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id_Category" type="hidden" />
        <div>
            <label>
                Название категории
            </label>
            <input asp-for="CategoryName" />
        </div>
        <div>
            <label>
                Описание
            </label>
            <input asp-for="CategoryDescription" />
        </div>
        
        <div>
            <label>
                Image
            </label>
            <input asp-for="Photo" type="hidden" />
            <input asp-for="Image" />
        </div>
        <input type="submit" value="submit" />
    </form>
</div>

@section Scripts{
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}